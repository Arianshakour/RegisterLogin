@using RegisterLogin.Domain.ViewModels
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "بازیابی رمز عبور";
}
<form method="post" style="margin-top:5px;" id="resetPasswordForm">
    <div class="col-10 col-sm-9 col-md-10 col-lg-6 mb-2 d-flex align-items-center">
        <label asp-for="Email" class="mb-0" style="margin-left:5px"></label>
        <input class="form-control" id="resetEmail" name="Email" value="@Model.Email" readonly />
    </div>
    <div class="col-10 col-sm-9 col-md-10 col-lg-6 mb-2">
        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="رمز جدید خود را وارد کنید ..." />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="col-10 col-sm-9 col-md-10 col-lg-6 mb-2">
        <button type="button" onclick="resetPasswordPost()" class="btn btn-primary">ذخیره رمز عبور جدید</button>
    </div>
</form>