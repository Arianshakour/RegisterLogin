@using RegisterLogin.Domain.ViewModels
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<form method="post" style="margin-top:5px;" id="ChangePasswordForm">
    <div class="col-10 col-sm-9 col-md-10 col-lg-6 mb-2 d-flex align-items-center">
        <label asp-for="Email" class="mb-0" style="margin-left:5px"></label>
        <input class="form-control" id="changeEmail" name="Email" value="@Model.Email" readonly />
    </div>
    <div class="col-10 col-sm-9 col-md-10 col-lg-6 mb-2">
        <div class="form-group">
            <input asp-for="OldPassword" class="form-control" placeholder="رمز فعلی خود را وارد کنید ..." />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="col-10 col-sm-9 col-md-10 col-lg-6 mb-2">
        <div class="form-group mb-2">
            <input asp-for="NewPassword" class="form-control" placeholder="رمز جدید خود را وارد کنید ..." />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="ReNewPassword" class="form-control" placeholder="رمز جدید خود را مجددا وارد کنید ..." />
            <span asp-validation-for="ReNewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="col-10 col-sm-9 col-md-10 col-lg-6 mb-2">
        @* <button type="submit" asp-controller="Login" asp-action="ChangePassword" class="btn btn-primary">ذخیره رمز عبور جدید</button> *@
        <button type="button" onclick="changePasswordPost()" class="btn btn-primary">ذخیره رمز عبور جدید</button>
    </div>
</form>
